@{
    ViewData["Title"] = "Add Question";
    var quizId = ViewBag.QuizId;
    var quizTitle = ViewBag.QuizTitle;
}

<h2>Add Question to Quiz @quizTitle</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["ErrorMessage"]
    </div>
}

<form asp-controller="AddQuestions" asp-action="Add" method="post">
    <input type="hidden" name="quizId" value="@quizId" />

    <!-- Question Text -->
    <div class="form-group mb-3">
        <label class="form-label fw-bold">Question Text</label>
        <input type="text" name="text" class="form-control" required />
    </div>

    <!-- Options -->
    <div class="form-group mb-3">
        <label class="form-label fw-bold">Options</label>
        <input type="text" name="optionTexts" class="form-control mb-1" placeholder="Option 1" required />
        <input type="text" name="optionTexts" class="form-control mb-1" placeholder="Option 2" required />
        <input type="text" name="optionTexts" class="form-control mb-1" placeholder="Option 3" />
        <input type="text" name="optionTexts" class="form-control mb-1" placeholder="Option 4" />
    </div>

    <!-- Correct Option -->
    <div class="form-group mb-3">
        <label class="form-label fw-bold">Correct Option Index (0–3)</label>
        <input type="number" name="correctOptionIndex" class="form-control" min="0" max="3" required />
    </div>

    <button type="submit" class="btn btn-success">Save Question</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary ms-2">Exit</a>

</form>

