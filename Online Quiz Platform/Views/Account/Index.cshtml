@model Online_Quiz_Platform.Models.Entities.Register

<h2>👤 Profile</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card p-3 shadow-sm" style="max-width:500px;">
    <p><strong>ID:</strong> @Model.Id</p>
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Is Creator:</strong> @(Model.CreatorFlag)</p>
</div>

<div class="mt-3">
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">⬅ Back to Home</a>
</div>

<div class="mt-3">
    @if (Model.CreatorFlag == "Y")
    {
        <form asp-controller="Creator" asp-action="DisableCreator" method="post">
            <button type="submit" class="btn btn-warning">🚫 Disable Creator</button>
        </form>
    }
    else
    {
        <form asp-controller="Creator" asp-action="EnableCreator" method="post">
            <button type="submit" class="btn btn-success">✅ Enable Creator</button>
        </form>
    }
</div>
