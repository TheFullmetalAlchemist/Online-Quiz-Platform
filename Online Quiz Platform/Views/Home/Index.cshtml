@{
    ViewData["Title"] = "Home";
}

<h1>Welcome to the Online Quiz Platform</h1>

@if (!string.IsNullOrEmpty(ViewBag.UserName))
{
    <h3>Hello, @ViewBag.UserName ! 🎉</h3>
}

<p>Choose an option below:</p>

<ul>
    <li><a asp-controller="Quiz" asp-action="SelectQuiz">Take a Quiz</a></li>
    <li><a asp-controller="Account" asp-action="Index">View Account</a></li>
    <li><a asp-controller="Login" asp-action="Index">Logout</a></li>
</ul>
<div class="mt-3">
    <a class="btn btn-success btn-lg" asp-controller="Leaderboard" asp-action="Index">
        🏆 View Leaderboard
    </a>
        <a class="btn btn-success btn-lg" asp-controller="AddQuestions" asp-action="Create">
            ➕ Add Question
        </a>
    </div>
