@{
    ViewData["Title"] = "Home";
}

<h1>Welcome to the Online Quiz Platform</h1>

@if (!string.IsNullOrEmpty(ViewBag.Name))
{
    <h3>Hello, @ViewBag.Name! 🎉</h3>
}

<p>Choose an option below:</p>

<ul>
    <li><a asp-controller="Quiz" asp-action="Start">Take a Quiz</a></li>
    <li><a asp-controller="Account" asp-action="Index">View Profile</a></li>
    <li><a asp-controller="Login" asp-action="Index">Logout</a></li>
</ul>
<div class="mt-3">
    <a class="btn btn-success btn-lg" asp-controller="Leaderboard" asp-action="Index">
        🏆 View Leaderboard
    </a>
    </div>
