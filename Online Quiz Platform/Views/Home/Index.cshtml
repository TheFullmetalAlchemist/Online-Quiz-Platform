@{
    ViewData["Title"] = "Home";
}

<h1>Welcome to the Online Quiz Platform</h1>

@if (!string.IsNullOrEmpty(ViewBag.Email))
{
    <h3>Hello, @ViewBag.Email! 🎉</h3>
}

<p>Choose an option below:</p>

<ul>
    <li><a asp-controller="Quiz" asp-action="Start">Take a Quiz</a></li>
    <li><a asp-controller="Account" asp-action="Profile">View Profile</a></li>
    <li><a asp-controller="Login" asp-action="Index">Logout</a></li>
    <li><a class="btn btn-success" asp-controller="Leaderboard" asp-action="Index">View Leaderboard</a></li>
</ul>
