@model IEnumerable<Online_Quiz_Platform.Models.Entities.QuizAttempt>

@{
    string currentSortColumn = ViewBag.CurrentSortColumn ?? "Score";
    string currentSortOrder = ViewBag.CurrentSortOrder ?? "desc";
    string nextSortOrder = currentSortOrder == "asc" ? "desc" : "asc";
}

<h2>Leaderboard</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortColumn="username" asp-route-sortOrder="@nextSortOrder">
                    User Name @(currentSortColumn == "username" ? (currentSortOrder == "asc" ? "↑" : "↓") : "")
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortColumn="score" asp-route-sortOrder="@nextSortOrder">
                    Score @(currentSortColumn == "score" ? (currentSortOrder == "asc" ? "↑" : "↓") : "")
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortColumn="attemptdate" asp-route-sortOrder="@nextSortOrder">
                    Attempt Date @(currentSortColumn == "attemptdate" ? (currentSortOrder == "asc" ? "↑" : "↓") : "")
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortColumn="quiz" asp-route-sortOrder="@nextSortOrder">
                    Quiz Title @(currentSortColumn == "quiz" ? (currentSortOrder == "asc" ? "↑" : "↓") : "")
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var attempt in Model)
        {
            <tr>
                <td>@attempt.UserName</td>
                <td>@attempt.Score</td>
                <td>@attempt.AttemptDate.ToString("dd-MM-yyyy HH:mm")</td>
                <td>@attempt.Quiz?.Title</td>
            </tr>
        }
    </tbody>
</table>
