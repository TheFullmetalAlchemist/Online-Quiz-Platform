@{
    ViewData["Title"] = "Quiz Result";
}

<h2>@ViewBag.QuestionText</h2>

@if (ViewBag.IsCorrect)
{
    <p class="text-success">✅ Correct Answer!</p>
}
else
{
    <p class="text-danger">❌ Wrong Answer.</p>
    <p>The correct answer is: <strong>@ViewBag.CorrectAnswerText</strong></p>
}

<a asp-controller="Quiz" asp-action="Index" class="btn btn-primary mt-3">Take Another Quiz</a>
